@page
@model miniProjet.Pages.Administration.Classes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h3>Classe</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Classe.libele)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Classe.libele)
        </dd>
    </dl>
    <h4>Les etudiants de cette classe</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Nom complet
                </th>
                <th>
                    Email
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.EtudiantsActuel)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Classe.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
